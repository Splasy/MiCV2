<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane fx:id="view" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
   <right>
      <VBox BorderPane.alignment="CENTER_LEFT">
         <children>
            <Button fx:id="addConocimientoButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAddConocimientoAction" text="Añadir conocimiento">
               <VBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="addIdiomaButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAddIdiomaAction" text="Añadir idioma">
               <VBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="eliminarButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onEliminarAction" text="Eliminar">
               <VBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
   <center>
      <TableView fx:id="tableView" editable="true" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="denominacionColumn" prefWidth="110.0" text="Denominación" />
          <TableColumn fx:id="nivelColumn" prefWidth="104.0" text="Nivel" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="3.0" left="3.0" right="2.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>
